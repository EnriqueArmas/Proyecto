public partial class LeyForm : Form
    {
        int i = 0;
        string[] users = new string[6];
        public LeyForm()
        {
            InitializeComponent();
        }

        private void btnAdd_Click(object sender, EventArgs e)
        {
            textBox1.Enabled = false;
        }

        private void btnModificar_Click(object sender, EventArgs e)
        {
            textBox1.Enabled = true; //Modifica la ley
        }

        private void btnCopy_Click(object sender, EventArgs e)
        {
            textBox2.Text = textBox1.Text;
            textBox3.Text = textBox1.Text; //   Se copian las leyes en un array
            textBox4.Text = textBox1.Text;
            textBox5.Text = textBox1.Text;
            textBox6.Text = textBox1.Text;
            string[] sley = new string[6] { (textBox1.Text),(textBox2.Text), (textBox3.Text), (textBox4.Text), (textBox5.Text), (textBox6.Text) };
        }
    }
    
