    public partial class ReglaForm : Form
    {
        public ReglaForm()
        {
            InitializeComponent();
        }

        private void btnAdd_Click(object sender, EventArgs e)
        {
            textBox2.Enabled = false;
        }

        private void btnCopy_Click(object sender, EventArgs e)
        {
            textBox9.Text = textBox2.Text; //Al apacharse se copian
            textBox8.Text = textBox2.Text;
            textBox7.Text = textBox2.Text;
            textBox3.Text = textBox2.Text;
            textBox4.Text = textBox2.Text;
            textBox5.Text = textBox2.Text;
            textBox6.Text = textBox2.Text;
            string[] sley = new string[8] { (textBox7.Text), (textBox2.Text), (textBox3.Text), (textBox4.Text), (textBox5.Text), (textBox6.Text), (textBox8.Text), (textBox9.Text)};

        }

        private void btnModificar_Click(object sender, EventArgs e)
        {
            textBox2.Enabled = true;
        }
    }
